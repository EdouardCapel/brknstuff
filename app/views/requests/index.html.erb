<div class ="display-owner-requests">

  <h4>View requests you have made (for someone eles' stuff):</h4>

  <% @user_requests.each do |request| %>
    <div class="message">
      <div class="message-name">
        <p><%= request.item.name %></p>
      </div>
      <div class="message-body">
        <p><%= request.user.email %></p>
      </div>
      <div class="message-status">
        <p class="status pending">
          <% case request.status %>
          <% when "0" %>
            <p>Pending</p>
          <% when "1" %>
            <p>Accepted</p>
          <% when "2" %>
            <p>Declined</p>
          <% end %>
        </p>
        <p class="price"><%= request.created_at %></p>
      </div>
    </div>
  <% end %>
</div>

<div class ="display-user-requests">

  <h4>View requests you have received (for my stuff):</h4>

  <% @owner_items.each do |item| %>
    <% next if item.requests.size == 0 %>
      <% item.requests.each do |request| %>
        <div class="message">
          <div class="message-name">
            <p><%= request.item.name %></p>
          </div>
        <div class="message-body">
          <p><%= request.user.email %></p>
        </div>
        <div class="message-status">
          <p class="status pending">
            <% case request.status %>
            <% when "0" %>
              <p>Pending</p>
            <% when "1" %>
              <p>Accepted</p>
            <% when "2" %>
              <p>Declined</p>
            <% end %>
          </p>
      <% end %>
        <p class="price">%= request.created_at %></p>
      </div>
    </div>
  <% end %>
</div>




