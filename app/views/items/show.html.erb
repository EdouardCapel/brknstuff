<div class="container">
  <div class="item-image"></div>
  <div class="item-name">
    <h1 class="text-center"><%= @item.name %></h1>
  </div>
  <div class="item-description">
    <p><%= @item.description %></p>
  </div>
  <div class="cta">
    <p><%= link_to "Rent this item",  new_item_request_path(@item), class: "btn btn-success" %></p>
  </div>
  <p><%= link_to "Other items to rent",  items_path%></p>
</div>
